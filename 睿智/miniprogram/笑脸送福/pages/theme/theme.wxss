/* pages/collar/collar.wxss */
/*全局背景*/
page{
background-color:#F1F1F1;
}
.container {
padding:0;
}
/*背景颜色*/
.head_bg{
width: 100%;
background: #d85940;
}
.head{
width:700rpx;
padding:25rpx;
}
.userinfo{
width: 700rpx;
height:120rpx;
}
.userinfo_avatar{
width: 120rpx;
height: 120rpx;
border-radius: 50%;
float: left;
}
.userinfo_nickname{
float: left;
width:410rpx;
height: 40rpx;
margin:0 15rpx;
font-size:30rpx;
color: #ffe2b1;
line-height: 40rpx;
display: block;
}
/*怎么玩*/
.howtoplay{
float: left;
display: block;
width:130rpx;
height: 40rpx;
font-size:26rpx;
color: #FFF;
text-align: right;
line-height: 40rpx;
}
.password{
float: left;
width:555rpx;
margin-left: 15rpx;
height:80rpx;
line-height:80rpx;
font-size:50rpx;
color: #ffe2b1;
}
/*相机*/
.photo1{

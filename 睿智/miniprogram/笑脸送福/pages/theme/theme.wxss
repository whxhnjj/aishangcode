width: 200rpx;
padding:30rpx;
height:50rpx;
background:#DC9F51;
text-align: center;
line-height:50rpx;
font-size: 30rpx;
border-radius:25rpx; 
color:#FFF;
}
/*跳转提现发转发页面*/
.category{
width:700rpx;
background:#D85940;
display: flex;
flex-direction: row;
flex-wrap: wrap;
font-size:32rpx;
justify-content:space-between;
color: #FFF;
margin-top: 50rpx;
}
.category navigator.tixian{
width:150rpx;
background: url('http://t.nongjia365.com.cn/guanli/assets/img/icon_tixian.png') no-repeat left center;
background-size:36rpx;
}
.category navigator.fa{
width:200rpx;
background: url('http://t.nongjia365.com.cn/guanli/assets/img/icon_fa.png') no-repeat left center;
background-size:36rpx;
}
.category navigator.zhuanfa{
width:100rpx;
background:url('http://t.nongjia365.com.cn/guanli/assets/img/icon_zhuanfa.png') no-repeat left center;
text-align: right;
background-size:36rpx;
}
.category navigator{
height: 60rpx;
line-height: 60rpx;
padding-left:50rpx;

}
.amount{
padding: 15rpx 0;
height: 50rpx;
line-height: 50rpx;
}
.amount span,.amount navigator{
font-size: 28rpx;
color: #858585;
display: block;
float: left;
}
.money{
width:640rpx;
float: left;
}
.peport{
width: 60rpx;
float: right;
color: #535D76;
}
/*领取人信息*/
.claim{
width:680rpx;
margin:0 25rpx 25rpx 25rpx;
background: #FFF;
padding: 20rpx 0 20rpx 20rpx;
height: 100%;
overflow: hidden;
}
.claim .img{
width:200rpx;
height: 200rpx;
float: left;
}
.claim .img image{
width:200rpx;
height: 200rpx;
display: block;
}

.center{
width: 440rpx;
height: 200rpx;
overflow: hidden;
float: right;
}
.center .zf_most{
width: 440rpx;
height: 90rpx;
}
.zf_most_left{
width:195rpx;
height: 90rpx;
float: left;
display: block;
}
.setup{
width:40rpx;
height: 90rpx;
background: url('http://t.nongjia365.com.cn/guanli/assets/img/setting.png') no-repeat center top;
display:block;
float: right;
background-size:30rpx;
}
.zf_most_left .name_left{
display: block;
width: 195rpx;
height: 30rpx;
text-align: left;
font-size: 28rpx;
color: #b2b2b2;
line-height: 30rpx;
}
.zf_most_left .num_left{
display: block;
width: 195rpx;
height:60rpx;
text-align: left;
font-size:48rpx;
color: #222222;
line-height:60rpx;
}
.zf_most_left .num_left em{
font-size: 30rpx;
color: #b2b2b2;
}
.age{
font-size:26rpx;
padding:8rpx 15rpx;
display: inline-block;
margin:15rpx 0;
line-height: 26rpx;
background: #f49b8a;
color: #FFF;
border-radius:25rpx;
}
.user_info{
width: 420rpx;
margin: 4rpx 0;
}
.user_info_img{
width:35rpx;
height:35rpx;
border-radius: 50%;
border: 1rpx solid #AAA;
float: left;
}
.user_info_name{
padding:0 8rpx;
font-size: 24rpx;
float: left;
line-height:35rpx;
color: #696969;
}
.date{
font-size: 24rpx;
float: right;
line-height:35rpx;
color: #696969;
}

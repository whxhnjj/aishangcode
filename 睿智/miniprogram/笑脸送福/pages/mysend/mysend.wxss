.list{
  width: 750rpx;
  height: 100%;
  overflow: hidden;

}
.list .array{
  background: #FFFFFF;
  width: 700rpx;
  padding: 15rpx 25rpx;
  border-bottom:3rpx solid #E6E6E6;
  height: 100%;
  overflow: hidden;

}
.list .array .array_tit{
  width: 700rpx;
}
.list .array .array_tit span.name{
  width: 550rpx;
  display: block;
  font-size: 26rpx;
  float: left;
  line-height: 50rpx;
  text-align: left;
}
.list .array .array_tit span.money{
  width: 150rpx;
  display: block;
  float: left;
  font-size: 26rpx;
  text-align: right;
  font-weight: bold;
   line-height: 50rpx;
}
.list .array .array_foter .date{
  color: #AAA;
  font-size: 24rpx;
  width: 550rpx;
   display: block;
   float: left;
}
.list .array .array_foter .ys{
  color: #AAA;
  font-size: 24rpx;
  width: 150rpx;
   display: block;
   float: left;
   text-align: right;
}
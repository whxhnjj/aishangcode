.list{
  width: 750rpx;
  height: 100%;
  overflow: hidden;
  background: #FFFFFF;
}
.list .array{
  width: 700rpx;
  padding:25rpx;
  border-bottom:3rpx solid #E6E6E6;
  height: 100%;
  overflow: hidden;
}
.list .array .img_array{
  width:100rpx;
  height:100rpx;
  border: 1rpx solid #999;
  float: left;
}
.list .array .infomation{
  width: 580rpx;
  height: 100rpx;
  float: right;
}
.list .array .infomation .name_array{
  font-size: 28rpx;
  width:430rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: block;
  float: left;
}
.list .array .infomation .money{
  font-size: 28rpx;
  width:150rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: block;
  float: right;
  font-weight: bold;
  text-align: right;
}
.list .array .infomation text.date{
  font-size: 28rpx;
 width: 580rpx;
  height: 50rpx;
  float: left;
  line-height: 50rpx;
  display: block;
  color: #AAA;
}














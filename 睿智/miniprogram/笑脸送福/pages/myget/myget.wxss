.userinfo {
  width: 750rpx;
  height:210rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  display: block;
  margin:25rpx auto;
  border: 1rpx solid #999;
}

.userinfo-nickname {
  width:750rpx;
  height: 40rpx;
  display: block;
  color: #000;
  font-size:30rpx;
  text-align: center;
}
.userinfo-nickname em{
 color: #4e6182;
}

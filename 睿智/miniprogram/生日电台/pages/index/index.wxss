/**index.wxss**/
.container{
  height: 100%;
  overflow: hidden;
}
/*1*/
.bg{
  height: 100%;
  width: 100%;
}
.bg image{
  height: 100%;
  width: 100%;
  filter: blur(50rpx);
}
/*2*/
.bg-gray{
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(54, 43, 41, 0.1);
}
.logo{
  width: 200rpx;
  height: 100rpx;
  position: absolute;
  top:25rpx;
  left:25rpx;
  z-index: 9;
}
.logo image{
  width: 200rpx;
}
.zhizheng1{
  width: 300rpx;
  height:400rpx;
  position: absolute;
  top: 0;
  left:280rpx;
  background: url(http://www.hsbggb.com/yinyue/04.png) no-repeat center top;
  background-size:288rpx 375rpx;
  z-index:99;
}
.zhizheng2{
  width: 300rpx;
  height:400rpx;
  position: absolute;
  top:-80rpx;
  left:280rpx;
  background: url(http://www.hsbggb.com/yinyue/04.png) no-repeat center top;
  background-size:288rpx 375rpx;
  z-index: 9;
}
/*3*/
.rotate-disk-container{
  position: absolute;
  top: 0;
  height:90%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.rotate-disk{
  width: 400rpx;
  height:400rpx;
  border-radius:400rpx;
  overflow: hidden;
  border:100rpx solid #0e0e0e;
}
.poster{
  width:400rpx;
  height:400rpx;
}
.rotate-360{
  animation: rotate 10s linear infinite;
}
.rotate-360-paused{
  animation: rotate 10s linear infinite;
  animation-play-state: paused;
}
@keyframes rotate
{
  0%   {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}
/*4*/
.title-container{
  position: absolute;
  top: 0;
  height: 160rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.title-left{
  width: 60rpx;
  height: 60rpx;
}
.text{
  height:50rpx;
  width: 100%;
  color: #FFF;
  text-align: center;
  position: absolute;
  bottom:240rpx;
  left: 0;

}
.icon-list{
  width: 54rpx;
  height: 36rpx;
  margin: 0 30rpx 0 0;
}
.slider-container{
  position: absolute;
  bottom: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.slider-time{
  font-size: 32rpx;
  display: block;
  width: 19%;
  text-align: center;
  line-height: 18px;
  color: #fff;
}
.wx-slider-handle{
  width: 18px!important;
  height: 18px!important;
  top: 5px!important;
}
/*4*/
.operation-container{
  position: absolute;
  bottom: 0;
  height: 160rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.icon-prev{
  width: 80rpx;
  height: 80rpx;
}
.icon-play{

  margin: 0 20rpx;
  width: 98rpx;
  height: 98rpx;
}
.icon-pause{
  margin: 0 20rpx;
  width: 98rpx;
  height: 98rpx;
}
.icon-next{
  width: 80rpx;
  height: 80rpx;
}

/*5*/
.list{
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
  color: #fff;
}
.list-one{
  height: 160rpx;
  display: flex;
  padding: 0 30rpx;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 3rpx solid #FFF;
}
.list-one-poster{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.list-one-right{
  margin: 0 0 0 30rpx;
}
.list-one-choose{
  background-color: rgba(54, 43, 41, 0.6);
}
.list-index{
  display: block;
  width: 60rpx;
  height: 60rpx;
  background-color:#13beec;
  text-align: center;
  border-radius: 60rpx;
  line-height: 60rpx;
  margin-right: 20rpx;
}
.share_img{
  width: 750rpx;
  height: 580rpx;
  margin-bottom: 230rpx;
}

/*名片信息*/
.share_card{
  position: absolute;
  top: 420rpx;
  left: 50%;
  margin-left: -345rpx;
  z-index: 100;
  width: 690rpx;
  height: 404rpx; 
}
.share_card_bg{
  position: absolute;
  top: -30rpx;
  left: -30rpx;
  z-index: 100;
  width: 750rpx;
  height: 521rpx;
}
.share_card_box{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 110;
  width: 690rpx;
  height: 404rpx;
  padding: 80rpx;
}
.share_card_box .card_name{
  display: block;
  margin-bottom: 30rpx;
  font-size: 34rpx;
  font-weight: 600;
}
.share_card_box .card_job{
  display: block;
  margin-bottom: 40rpx;
  font-size: 30rpx;
  color: rgb(102, 102, 102);
}
.card_tel{
  font-size: 26rpx;
  margin-bottom: 30rpx;
}
.card_tel image{
  display: inline-block;
  margin-right: 20rpx;
  width: 30rpx;
  height: 30rpx;
}
.card_address{
  width: 100%;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 26rpx;
  overflow: hidden; 
}
.card_address image{
  display: inline-block;
  margin-right: 20rpx;
  width: 30rpx;
  height: 30rpx;
}

.card_log_box{
  position: absolute;
  top: 75rpx;
  right: 70rpx;
  z-index: 110;
  width: 150rpx;
}
.card_logo{
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 50%;
}
.card_logo_name{
  display: block;
  margin-top: 20rpx;
  width: 100%;
  text-align: center;
  font-size:28rpx;
}

/* 二维码*/
.erweima{
  display: block;
  width: 186rpx;
  height:186rpx;
  margin: 0 auto 20rpx;
  border-radius: 50%;
}
.share_firend{
  display: block;
  font-size: 30rpx;
  text-align: center;
  color: rgb(51,52,52);
}

/* 动态 */
.trend{
  margin-bottom: 80rpx;
}
.trend .card_title{
  margin-bottom: 0;
}
.trend .trend_lists{
  margin-bottom: 80rpx;
}
.trend .trend_list{
  margin-top: 60rpx;
  width: 100%;
  height: 160rpx;
  background: #f5f5f5;
}
.trend_list image{
  width: 240rpx;
  height: 160rpx;
}
.trend_list_box{
  width: 450rpx;
  padding: 42rpx 40rpx 0 40rpx;
}
.trend_list_box text:first-child{
  display: block;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 25rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.trend_list_box text:last-child{
  display: block;
  color: rgb(153, 153, 153);
  font-size: 24rpx;
}

/* 联系 */
.contact{
  margin-bottom: 80rpx;
}
.contact_list{
  text-align: center;
  margin-bottom: 60rpx;
}
.contact_list .list_text1{
  display: block;
  margin-bottom: 40rpx;
  color: rgb(102, 102, 102);
  font-size: 26rpx;
}
.contact_list .list_view{
  font-size:28rpx;
  color: rgb(25, 227, 168);
}
.contact_list .list_view image{
  display:inline-block;
  margin-right:20rpx;
  width:30rpx;
  height:30rpx;
}

/* 按钮 */
.home_btn{
  display: block;
  width: 330rpx;
  height: 60rpx;
  margin: 0 auto;
  line-height: 60rpx;
  font-size: 28rpx;
  border-radius: 0;
  color: rgb(36, 193, 169);
  background: #fff;
  border: 1rpx solid rgb(36, 193, 169);
}
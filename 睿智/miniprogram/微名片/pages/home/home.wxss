/*头部*/
.home_header{
  width: 100%;
  margin: 30rpx 0 40rpx;
}
.home_header image{
  display:block;
  width:80rpx;
  height:80rpx;
  margin:0 auto 15rpx;
  border-radius:50%;
}
.home_header text{
  display: block;
  text-align:center;
  font-size:32rpx;
}

/*banner*/
.home_banner{
  width: 750rpx;
  height: 450rpx;
  margin-bottom: 80rpx;
}
.home_banner_list image{
  width: 750rpx;
  height: 450rpx;
}

/*公司简介*/
.company{
  margin-bottom: 80rpx;
}
.com_cont text{
  display: block;
  text-align:justify;
  line-height:1.8;
}


/* 产品 */
.product{
  margin-bottom: 80rpx;
}
.product .card_title{
  margin-bottom: 0;
}
.pro_lists{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 80rpx;
}
.pro_lists .pro_list{
  width: 330rpx;
  margin-top: 60rpx;
}
.pro_list image{
  display: block;
  width: 330rpx;
  height: 330rpx;
}
.pro_list text{
  display: block;  
  text-align: center;
}
.pro_list .pro_name{
  margin-top: 30rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
}
.pro_list .pro_name2{
  margin-top: 10rpx;
  text-align: left;
  color: #666666;
  font-size: 24rpx;
  line-height: 1.5;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;

}
.pro_list .pro_price{
  font-size: 32rpx;
  color: #e4393c;
}

/* 服务 */
.service{
  margin-bottom: 80rpx;
}
.service .card_title{
  margin-bottom: 0;
}
.ser_lists{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
}
.ser_list{
  position: relative;
  width: 330rpx;
  height: 200rpx;
  padding-top: 45rpx;
  background: #00cc99;
  margin-top: 60rpx;
  text-align: center;
}
.ser_list text:first-child{
  display: block;
  margin-bottom: 20rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.ser_list text:nth-child(2){
  display: block;
  width: 270rpx;
  margin: 0 auto;
  color: #fff;
  font-size: 22rpx;
  text-align: left;
  line-height: 1.5;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

.header{
  width: 100%;
  height: 50rpx;
  background: #f5f5f5;
}
.record_box{
  padding-bottom: 70rpx;
}

.record_list{
  padding: 50rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #e6e6e6;
}
.record_box .record_list:first-child{
  border-top: none;
}

.record_list .left_box{
  display: flex;
  align-items: center;
}
.record_list .left_box image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.record_list .left_box>view>text:first-child{
  display: block;
  margin-bottom: 3rpx;
  font-size: 30rpx;
}
.record_list .left_box>view>text:last-child{
  font-size: 24rpx;
  color: #999;
}


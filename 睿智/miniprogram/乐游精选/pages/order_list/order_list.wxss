.navbar{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 40rpx 30rpx 0;
  background: #fff;
  font-size: 32rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.navbar>view{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navbar>view text{
  margin-bottom: 35rpx;
}
.navbar>view view{
  width: 50rpx;
  height: 6rpx;
  background: #fff;
}

.navbar .selected text{
  color: #ff5000;
  font-weight: 600;
}
.navbar .selected view{
  background: #ff5000;
}


/* 内容 */
.content_box{
  padding: 120rpx 30rpx 70rpx;
}

.content_list{
  display: flex;
  margin-top: 50rpx;
  width: 690rpx;
  height: 200rpx;
  background: #fff;
  border-radius: 6rpx;
  overflow: hidden;
}

.content_list .img_box{
  width: 200rpx;
  height: 200rpx;
  margin-right: 25rpx;
}
.content_list .img_box image{
  height: 200rpx;
  width: 200rpx;
}

.content_list .content_cont{
  width: 300rpx;
  padding-top: 25rpx;
}
.content_cont>text:first-child{
  display: block;
  margin-bottom: 35rpx;
  font-size: 30rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.content_cont>text:nth-of-type(2){
  display: block;
  font-size: 26rpx;
}
.content_cont>view{
  display: flex;
  align-items: baseline;
  font-size: 26rpx;
}
.content_cont>view text:last-child{
  font-size: 34rpx;
}

.content_list .content_state{
  margin-left: 20rpx;
  width: 145rpx;
  padding-top: 25rpx;
  font-size: 30rpx;
  text-align: center;
  color: #ff5000;
}
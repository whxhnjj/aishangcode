/* 头部 */
.header{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  height: 140rpx;
  padding: 30rpx;
  background: #fff;
  font-size: 30rpx;
}
.header .logo_box{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
}
.logo_box image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  border: 4rpx solid #e6e6e6;
  overflow: hidden;
}

.header .city_choose{
  padding-right: 10rpx;
  color: #666;
}


/* banner */
.banner>swiper:first-child{
  width: 100%;
  height: 420rpx;
}
.banner>swiper:first-child image{
  width: 100%;
  height: 420rpx;
}
.banner_msg{
  width: 750rpx;
  height: 60rpx;
  background: #fff url(https://leyou.site.webimage.cn/static/xcx/icon_ad.png) no-repeat 30rpx 15rpx;
  background-size: 32rpx 30rpx;
  line-height: 60rpx;
  color: #fa9c3e;
}
.banner_msg swiper-item{
  padding-left: 82rpx;
}


/* content */
.content{
  padding: 60rpx 30rpx 70rpx;
}

.content .content_header{
  font-size: 36rpx;
  font-weight: 600;
}

.content_box .content_list{
  position: relative;
  width: 690rpx;
  margin-top: 50rpx;
  padding-bottom: 55rpx;
  border-radius: 6rpx;
  background: #fff;
  overflow: hidden;
}
.content_list image{
  display: block;
  width: 100%;
  height: 386rpx;
}
.content_list .content_title{
  display: block;
  margin: 30rpx 0 20rpx;
  padding: 0 30rpx;
  font-weight: 700;
  font-size: 30rpx;
  text-align: justify;
  word-break: break-all;
  /* overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap; */
}
.content_list .content_des{
  display: block;
  margin-bottom: 25rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #fcb865;
  text-align: justify;
  word-break: break-all;
  /* overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap; */
}
.content_list .content_msg{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: flex-end;
  padding: 0 30rpx;
}
.content_msg .left_box{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: baseline;
}
.left_box text:first-child{
  margin-right: 5rpx;
  font-size: 30rpx;
  color: #ff5000;
}
.left_box text:nth-of-type(2){
  margin-right: 15rpx;
  /* font-size: 48rpx; */
  font-size: 44rpx;
  color: #ff5000;
}

.left_box text:nth-of-type(3){
  font-size: 24rpx;
  
}
.left_box .line_through{
  text-decoration:line-through;
  color: #b3b3b3;
}
.content_msg .right_box{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}
.right_box text:first-child{
  margin: 23rpx 20rpx 0 0;
  font-size: 24rpx;
  color: #b3b3b3;
}
.right_box view{
  width: 120rpx;
  height: 60rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6rpx;
  background: -webkit-linear-gradient(left, #fc8400 , #ff5600)
}
/* 新品 已售罄 倒计时 */
.content_list .newpro{
  position: absolute;
  top: 0rpx;
  left: 40rpx;
  z-index: 100;
  width: 80rpx;
  height: 90rpx;
  background: url(https://leyou.site.webimage.cn/static/xcx/newproduct.png) no-repeat center center;
  background-size: 80rpx 90rpx;
  font-size: 26rpx;
  text-align: center;
  font-weight: 600;
  color: #fff;
  line-height: 85rpx;
}

.content_list .soldout{
  position: absolute;
  top: 40rpx;
  left: 0rpx;
  z-index: 100;
  width: 130rpx;
  height: 60rpx;
  background: url(https://leyou.site.webimage.cn/static/xcx/soldout.png) no-repeat center center;
  background-size: 130rpx 60rpx;
  font-size: 26rpx;
  text-align: center;
  font-weight: 600;
  color: #fff;
  line-height: 60rpx;
}
.content_list.selected .right_box view{ background: #ccc;}
.content_list.selected .content_title{ color: #999;}
.content_list.selected .content_des{ color: #fecf97;}
.content_list .no{ position: absolute; z-index: 110; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.3); }

.content_list .time{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  position: absolute;
  top: 20rpx;
  right: 0rpx;
  z-index: 100;
  width: 360rpx;
  height: 50rpx;
  padding-left: 18rpx;
  background: -webkit-linear-gradient(left, #fc8b00 , #ff5000);
  border-radius: 35rpx 0 0 35rpx;
  color: #fff;
}
.time>text{
  margin-right: 20rpx;
  font-size: 24rpx;
  line-height: 50rpx;
}
.time>view{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  width: 140rpx;
}
.time>view view{
  width: 30rpx;
  height: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
}
.time>view text{
  width: 25rpx;
  height: 30rpx;
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  line-height: 29rpx;
}



.category_list>text{
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  width: 300rpx;
  background-color: rgba(255, 80, 0, 0.7);
  text-align: center;
  color: #fff;
  font-size:24rpx;
}
/* 已售罄 */
.category_list .no_store_count{
  position: absolute;
  top: 20rpx;
  left: 0;
  z-index: 10;
}
.category_list .no_store_count image{ 
  position: absolute;
  top: 0;
  left: 0;
  width: 88rpx;
  height: 38rpx;
}
.category_list .no{
  position:absolute;
  z-index:20;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background-color:rgba(0, 0, 0, 0.3);
}

/* 新品 */
.category_list .new_goods{
  position:absolute;
  top:0rpx;
  left:20rpx;
  z-index:10;
  width:60rpx;
  height:67.5rpx;
  background:url(https://leyou.site.webimage.cn/static/xcx/newproduct.png) no-repeat center center;
  background-size:60rpx 67.5rpx;
  font-size:22rpx;
  text-align:center;
  font-weight:600;
  color:#fff;
  line-height:60rpx;
}

.category_list .no_store_count text{
  position: relative;
  z-index: 30;
  display: block;
  padding-left: 12rpx;
  line-height: 38rpx;
  font-size: 20rpx;
  color: #fff;
}

.category_list .img_box{
  width: 300rpx;
  height: 168rpx;
}
.category_list .img_box image{
  height: 168rpx;
  width: 300rpx;
}

.category_list .category_cont{
  width: 390rpx;
  height: 168rpx;
  padding: 15rpx 35rpx 0 25rpx;
}
.category_cont>view:first-child{
  display: block;
  height: 80rpx;
  margin-bottom: 10rpx;
  font-size: 30rpx;
  font-weight: 700;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden; 
}

/* 头部选项卡 */
.navbar_box{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  background: #fff;
  border-bottom: 1rpx solid #e6e6e6;
}
.navbar{
  display: flex;
  white-space: nowrap; 
  width: 690rpx;
  margin: 0 auto;
  padding-top: 40rpx;
}
.item{
  display: inline-block;
  margin-right: 60rpx;
}
.navbar .item:last-child{
  margin-right: 0;
}
.item_box{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item_box view{
  margin-bottom: 35rpx;
  font-size: 32rpx;
}
.item_box text{
  width: 50rpx;
  height: 6rpx;
  background: #fff;
}

.navbar .selected view{
  color: #ff5000;
  font-weight: 600;
}
.navbar .selected text{
  background: #ff5000;
}

/* 内容区域 */
.category_box{
  padding: 120rpx 30rpx 70rpx;

}
.category_list{
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-top: 50rpx;
  width: 690rpx;
  height: 168rpx;
  background: #fff;
  border-radius: 6rpx;
  overflow: hidden;
}


/* .category_msg .left_box  .line_through{

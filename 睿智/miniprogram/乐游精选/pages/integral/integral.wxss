page{
  background: #fff;
}
/* 头部 */
.header{
  width: 750rpx;
  height: 300rpx;
  padding-top: 40rpx;
  background: url(https://leyou.site.webimage.cn/static/xcx/integral_bg.jpg) no-repeat center center;
  background-size: 750rpx 300rpx;
  text-align: center;
  color: #fff;
}
.header text:first-child{
  display: block;
  margin-bottom: 5rpx;
  font-size: 24rpx;
}
.header text:nth-of-type(2){
  display: block;
  margin-bottom: 20rpx;
  font-size: 72rpx;
  font-weight: 600;
}
.header>view{
  display: flex;
  justify-content: space-between;
  width: 300rpx;
  margin: 0 auto;
}
.header>view navigator,.header>view view{
  width: 130rpx;
  height: 35rpx;
  border-radius: 30rpx;
  border: 2rpx solid #fff;
  font-size: 24rpx;
  line-height: 35rpx;
}
.line{
  width: 100%;
  height: 50rpx;
  background: #f5f5f5;
}
/* 列表 */
.integral_box{
  padding-bottom: 70rpx;
  background: #fff;
}
.integral_list{
  padding: 50rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #e6e6e6;
}
.integral_box .integral_list:first-child{
  border-top: none;
}
.integral_list .left_box text:first-child{
  display: block;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}
.integral_list .left_box text:last-child{
  display: block;
  font-size: 24rpx;
  color: #999;
}
.integral_list .right_box{
  /* width: 90rpx; */
  font-size: 42rpx;
  font-weight: 600;
  color: #fc8b00;
}
.integral_list .selected{
  color: #ff5000;
}
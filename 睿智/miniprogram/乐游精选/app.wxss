
page {
  box-sizing: border-box;
  background: #f5f5f5;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  font-family: PingFangSC-Regular, sans-serif, "微软雅黑";
}

.container {
  position: relative;
  width: 690rpx;
  margin: 0 auto;
}

.clearfix {
  display: table;
  content: '';
  clear: both;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

view, images, text, navigator,textarea {
  box-sizing: border-box;
}

button::after {
  border: none;
}
.hide{
  display: none!important;
}


/* 兼容iponex */
.iphone_kuang{
  display: block;
  width: 100%;
  height: 68rpx;
}
.iphone {
  bottom: 68rpx !important;
}
.iphone_bottom{
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 100;
  width: 100%;
  height: 68rpx;
  background: #fff;
}

/* 颜色 */
.color_ff5000{
  color: #ff5000!important;
}
.color_999{
  color: #999!important;
}
.color_fc8b00{
  color: #fc8b00!important;
}

/* 底部 */
.bottom{
  position: fixed;
  display: flex;
  align-items: center;
  bottom: 0;
  left: 0;
  z-index: 100;
  width: 750rpx;
  height: 110rpx;
  background: #fff;
}

.bottom .btn{
  width: 376rpx;
  height: 110rpx;
  border-radius: 0;
  background: -webkit-linear-gradient(left, #fc8b00 , #ff5000);
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  font-size: 36rpx;
  font-weight: 600;
}
.bottom .selected{
 background:#ccc; 
}

.bottom .left_box{
  display: flex;
  width: 375rpx
}

/* 分页样式 */
.page_text{
  display: block;
  padding-top: 50rpx;
  text-align: center;
  color: #999;
}

/* 没有内容 */
.no_content{
  display: block;
  margin-top: 400rpx;
  text-align: center;
}


/* 回首页 */
.index_btn{
  position: fixed;
  top:45rpx;
  right: 50rpx;
  z-index: 990;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
}

.index_btn image{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 5rpx;
}
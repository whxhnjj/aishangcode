.nav{
  position: fixed;
  top:0;
  z-index: 100;
  height: 160rpx;
}
.nav .nav_item{
  width: 18%;
}

/* 列表 */
.task_box{
  padding-top: 160rpx;
  padding-bottom: 100rpx;
}

.task_list{
  margin-top: 50rpx;
  width: 100%;
  padding: 0 30rpx 55rpx;
  background: #fff;
}
.task_header{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.task_header_left{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.task_header_left image{
  width: 22rpx;
  height: 32rpx;
  margin-right: 15rpx;
}
.task_header_left text:nth-of-type(1){
  margin-right: 15rpx;
}
.task_header>text{
  color: #ff9800;
}

.task_cont{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.task_cont>image{
  width: 17rpx;
  height: 28rpx;
}
.task_msg_box{
  margin-top: 40rpx;
}
.task_msg_box text:nth-of-type(1){
  display: block;
  font-size: 32rpx;
}
.task_msg_box text:nth-of-type(1):before{
  display: inline-block;
  content: '';
  width: 8rpx;
  height: 8rpx;
  margin-right: 15rpx;
  border-radius: 50%;
  background: #02cc7a;
  vertical-align: 12%;
  overflow: hidden;
}
.task_msg_box text:nth-of-type(2){
  display: block;
  margin-left: 20rpx;
  color: #999;
}

.task_btn{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  
}
.task_btn .base_btn{
  margin-top: 50rpx;
  width: 690rpx;
}
.middle_btn{
  width: 320rpx;
  height:100rpx;
  margin-top: 50rpx;
  border-radius:50rpx;
  text-align:center;
  line-height:100rpx;
  font-size:36rpx;
  font-weight:600;
  background:#02cc7a;
  color:#fff;
}
.task_btn .btn_normal{
  color: #666;
  background:#e6e6e6;
}

/* 弹出层 */
.pop_bg{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
}
.pop_box{
  position: absolute;
  left: 50%;
  top: 35%;
  margin-left: -30%;
  z-index: 110;
  width: 60%;
  padding: 40rpx 30rpx 50rpx;
  background: #fff;
  border-radius: 10rpx;
}
.pop_box textarea{
  background: #f8f8f8;
  width: 100%;
  height: 200rpx;
  padding: 25rpx;
  margin-bottom: 40rpx;
}
.btn_box{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  width: 100%;
}
.btn_box button{
  box-sizing: border-box;
  display: inline-block;
  margin: 0;
  width: 175rpx;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 30rpx;
  border-radius: 45rpx;
  background: #02cc7a;
  color: #fff;
}
.btn_box .btn_normal{
  color: #666;
  background:#e6e6e6;
}

/* formid */

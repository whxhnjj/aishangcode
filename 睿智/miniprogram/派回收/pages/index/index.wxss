/********用户页面*********/
.user{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100%;
  background: #fff;
}
.logo{
  box-sizing:content-box;
  width: 70rpx;
  height: 70rpx;
  margin: 60rpx auto 20rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #dddddc;
  border: 10rpx solid #dddddc;
}
.logo>image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
}

.banner{
  position: relative;
  margin-bottom: 140rpx;
}
.banner swiper{
  width: 100%;
  height: 400rpx;
}
.banner swiper image{
  width: 100%;
  height: 400rpx;
}

.banner .logo_msg{
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  z-index: 100;
  width: 600rpx;
  margin-left: -300rpx;
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  color: #fff;
}

.bottom{
  /* position: absolute;
  bottom: 100rpx;

/* 搜索 */
.search{
    background-color: #fff;
    border: 1rpx solid #AAA;
    margin: 20rpx 0;
    border-radius: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    display: flex;
    flex-wrap: nowrap;
    padding: 0 30rpx;
    vertical-align: middle;
    align-items: center;
}

.search icon{
margin-right: 10rpx;
height: 18px;
}
.search input{
    flex: 1;
    vertical-align: middle;
    height: 70rpx;
      display: inline-block;
      font-size: 26rpx;
}
/* 列表 */
.wrap ul.ul{
  width: 700rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content:space-between;
}
.wrap ul.ul navigator{
  margin: 25rpx 0;
}
.wrap ul li{
  width:338rpx;
  display: block;
}
.wrap ul li .img{
  width:100%;
  height: 338rpx;
  overflow: hidden;
  position: relative;
}
.wrap ul li .img p{
  position: absolute;
  width:338rpx;
  padding: 10rpx;
  line-height: 50rpx;
  left: 0;
  bottom:0;
  background:rgba(0, 0, 0, 0.6);
  color: #FFF;
  font-size:26rpx;
}
.wrap ul li .img image{
  width:100%;
  max-height: 338rpx;
}
.wrap ul li span{
  width: 100%;
  font-size:30rpx;
  height:74rpx;
  line-height:40rpx;
  overflow: hidden;
  display: block;
  padding: 10rpx 0;
  text-align: left;
  color: #666666;
}
.wrap ul li em{
  padding-left:40rpx; 
  height: 50rpx;
  font-size:30rpx;
  line-height: 50rpx;
  margin-top:5rpx; 
  display: block;
  color:#13D4C8;
  text-align: left;
  background: url(http://t.nongjia365.com.cn/guanli/assets/image/img/jine.png) no-repeat left center;
  background-size:32rpx;
}
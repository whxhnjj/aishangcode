@import '../../components/comment/comment.wxss';
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.swiper {
  height:450rpx;
  width:750rpx;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.detail {
  margin:15rpx 25rpx 10rpx 25rpx;
}
.detail .title {
  font-size: 40rpx;
  margin: 10rpx;
  color: black;
  display: block;
}
.detail .price {
  color: #13D4C8;
  font-size: 40rpx;
   display: block;
  margin:0 10rpx;
}
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.text{
    padding-top:15rpx;
    color: #808080;
    font-size: 28rpx;
    margin-left: 28rpx;
}
/*详情*/
.xiangqing{
  background: #ECECEC;
  height: 100%;
  line-height: 50rpx;
  padding:20rpx 25rpx;
  margin:25rpx 0;
  font-size: 32rpx;
  color: #333;
}

.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.submit {
  background-color: #13D4C8; /* 蓝色 */
}
.image_detail {
  width:700rpx;
  margin: 0 25rpx;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size:40rpx;
  border-radius: 0rpx;
  width:80%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav .phone {
  width:25%;
  height: 100%;
  display: block;
  background:#EEE url('http://t.nongjia365.com.cn/guanli/assets/image/img/phone.png') no-repeat center center;
  background-size: 64rpx;
}

.text_most{
  font-size: 30rpx;
  padding:15rpx 25rpx;
  display: block;
  color: #666;
}
/*出售记录*/
.goods{
    background-color: #fff;
    margin-top:5rpx;
}

.goods .good{
margin-left: 10rpx;
padding:25rpx;
display: flex;
flex-direction: row;
align-items: center;
flex-wrap: nowrap;
}
.goods .good .photo{
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
}
.goods .good .info{
    flex: 1;
    margin-left: 14rpx;
}
.goods .good .info .goodsname{
    color: #111111;
    font-size: 28rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.goods .good .info .price{
    color: #ff6633;
    font-size: 34rpx;
    margin-top: 26rpx;
}
.goods .good .info .price text{
color: #999;
font-size: 24rpx;
text-decoration: line-through;
}
.goods .good .arrow{
color: #777777;
font-size: 24rpx;
height: 30rpx;
line-height: 30rpx;
margin-top: 4rpx;
}
.goods .good .arrow image{
    width: 21rpx;
    height: 30rpx;
    margin-left: 12rpx;
    vertical-align: middle;
}

.goods .border{
    border-top: 3rpx solid #f0f0f0;
}

.goods .laa{
     border-top: 3rpx solid #f0f0f0;
     color: #111111;
     font-size: 24rpx;
     text-align: center;
     height: 90rpx;
     line-height: 90rpx;
}

.goods .laa image{
    width: 26rpx;
    height: 26rpx;
    margin-left: 6rpx;
    vertical-align: middle;
}
/*视频播放*/
video{
  width: 700rpx;
  height: 350rpx;
  margin: 0 25rpx;
}
/*购买人数头像*/
.conuts{
    width:700rpx;
    color: #111111;
    font-size: 28rpx;
    height:70rpx;
    line-height:70rpx;
    border-bottom: 3rpx solid #f0f0f0;
    margin-bottom: 30rpx;
}
.purchase{
  width:725rpx;
  margin:25rpx 0 25rpx 25rpx;
  height: 100%;
  display: flex;
  flex-direction: wrap;
  flex-wrap: wrap;
  justify-content:flex-start;
}
.purchase .purchase_detail{
    width:88rpx;
    height:88rpx;
    margin:0 14rpx 14rpx 0;
    border-radius: 50%;
}
/*地址*/
.location{
    background-color: #fff;
    height: 90rpx;
    width:700rpx;
    margin:12rpx 25rpx;
}

.location .icon{
    width: 34rpx;
    height: 34rpx;
    float: left;
}
.location .info{
  width: 600rpx;
  color: #333;
  font-size: 26rpx;
  line-height: 34rpx;
  float: left;
  margin: 0 10rpx;
}
.location .arrow_left{
    height: 30rpx;
    width: 21rpx;
    margin:4rpx 0;
    float: right;
}

.phone{
    margin-top: 4rpx;
}








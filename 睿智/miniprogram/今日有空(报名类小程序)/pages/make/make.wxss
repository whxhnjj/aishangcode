  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.submit {
  background-color: #13D4C8; 
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size:40rpx;
  border-radius: 0rpx;
  width:100%;
  height: 100%;
  line-height: 100rpx;
}


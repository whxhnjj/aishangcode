.font{
  font-size: 32rpx;
  color: #333;
}
.gray{
  height:30rpx!important;
}
.blak{
  width: 700rpx;
  margin:0 25rpx;
  padding: 25rpx 0;
  height: 100%;
  overflow: hidden;
}
.blak .sp1{
  width: 550rpx;
  font-size: 40rpx;
  display: block;
  line-height:50rpx;
  height: 100%;
  float: left;
}
.blak .sp2{
  width: 550rpx;
    font-size: 32rpx;
  display: block;
  line-height: 50rpx;
  padding-top: 10rpx;
  height: 100%;
  color: #F00;
  float: left;
}
.blak .img{
  width: 130rpx;
  height: 130rpx;
  float: right;
}
.blak image{
  width: 130rpx;
  height: 130rpx;
}

.blak2{
  width: 700rpx;
  margin: 25rpx 25rpx 0 25rpx;
  padding: 10rpx 0;
}
.blak2 span{
  width: 200rpx;
  display: block;
  float: left;
}
.blak2 .row{
    width: 500rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
       font-size: 32rpx;
    justify-content:flex-start;
}
.blak2 .row .row-wrap{
    text-align: center;
    margin:0 20rpx 20rpx 0;
    border: 3rpx solid #AAA;
    font-size: 28rpx;
    padding: 10rpx;
}
.blak2 .row .row-wrap.active{
  background:#13D4C8;
  color: #FFF;
  border:2rpx solid #01847C;
}
.blak3{
   width: 700rpx;
  margin: 25rpx  25rpx 150rpx  25rpx;

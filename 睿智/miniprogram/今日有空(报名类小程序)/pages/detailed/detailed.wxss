.list{
  width: 700rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #DEDEDE;
}
.list .tit{
 width: 700rpx;
 height: 100%;
 overflow: hidden;
 padding-bottom:10rpx;
 color: #5E6366;
}
.list .tit span{
  width: 400rpx;
  display: block;
  line-height: 40rpx;
  font-size: 34rpx; 
  float: left; 
  height: 40rpx;
  text-align: left;
}
.list .tit p{
  width:300rpx;
  display: block;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 34rpx; 
  float: left;
  text-align: right; 
}
.list .date{
  clear: both;
  width: 700rpx;
  color:#A6ACAC;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.gray_h{
  height:80rpx;
  width:700rpx;
  padding: 0 25rpx;
  margin: 25rpx 0;
  background:#F0EFF4 ;
  color: #8C9093;
  font-size: 34rpx;
  
}
.gray_h span{
 width:500rpx;

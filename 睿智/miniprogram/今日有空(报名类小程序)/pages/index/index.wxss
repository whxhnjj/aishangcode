@import '../../components/good/good.wxss';
.swiper {
  height: 450rpx;
  width:750rpx;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.funcs{
    background-color: #ffffff;
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding:50rpx 0 0rpx 0;
}

.funcs .func{
    width:25%;
    text-align: center;
    margin-bottom: 30rpx;
}
.funcs .func image{
    width:150rpx;
    height:150rpx;
    text-align: center;

}
.funcs .func .name{
    text-align: center;
    color: #666666;
    font-size: 26rpx;
    margin-top: 10rpx;
}



.wrap ul.ul{
  width: 700rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content:space-between;
}
.wrap ul.ul navigator{
  margin: 25rpx 0;
}
.wrap ul li{
  width:338rpx;
  display: block;
}
.wrap ul li .img{
  width:100%;
  height: 338rpx;
  overflow: hidden;
  position: relative;
}
.wrap ul li .img p{
  position: absolute;
  width:338rpx;
  padding: 10rpx;
  line-height: 50rpx;
  left: 0;
  bottom:0;
  background:rgba(0, 0, 0, 0.6);
  color: #FFF;
  font-size:26rpx;
}
.wrap ul li .img image{
  width:100%;
  max-height: 338rpx;
}
.wrap ul li span{
  width: 100%;
  font-size:30rpx;
  height:74rpx;
  line-height:40rpx;
  overflow: hidden;
  display: block;
  padding: 10rpx 0;
  text-align: left;
  color: #666666;
}
.wrap ul li em{
  padding-left:40rpx; 
  height: 50rpx;
  font-size:30rpx;
  line-height: 50rpx;
  margin-top:5rpx; 
  display: block;
  color:#13D4C8;
  text-align: left;
  background: url(http://t.nongjia365.com.cn/guanli/assets/image/img/jine.png) no-repeat left center;
  background-size:32rpx;
}



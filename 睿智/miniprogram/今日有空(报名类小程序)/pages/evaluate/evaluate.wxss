.commodity{
  width: 700rpx;
  margin-top:25rpx;
  float: left;
  border-bottom: 3rpx solid #E9E9E9;
}
.commodity image{
  width:150rpx;
  height: 150rpx;
  float: left;
}
.commodity span{
  width:525rpx;
  height: 80rpx;
  display: block;
  float: right;
  line-height:40rpx;
  font-size: 34rpx;
}
.commodity b{
  width:525rpx;
  display: block;
  float: right;
  line-height:100rpx;
  font-size: 30rpx;
  color: #AAA;
}
/*评分*/
.mark{
    float: left;
  width: 700rpx;
  margin: 25rpx 0;

}
.mark p{
  width: 100rpx;
  height:50rpx;
  font-size:32rpx;
  line-height:50rpx;
  color: #666; 
  float: left;
}
/*星级评分图标部分*/
.mark .xing{
  width: 550rpx;
  height:50rpx;
  float: right;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:flex-start;
}
.mark .xing image{
  width:50rpx;
  height:50rpx;
  float: right;
  margin-right: 25rpx;
}
textarea{
    float: left;
  padding: 25rpx 0;
  width: 700rpx;
  height:200rpx;
    overflow: hidden;
}
/*照相*/
.photo{
  width: 700rpx;
  height:100%;
  overflow: hidden;
  border-bottom:3rpx solid #E9E9E9;
}
.photo .tap{
  position: relative;
  width: 200rpx;
  height: 200rpx;
  float: left;
    margin:25rpx 0;
  border: 3rpx dashed #DBDBDB;
  text-align: center;
  line-height: 300rpx;
  background: url('http://t.nongjia365.com.cn/guanli/assets/image/img/xiangji.png') no-repeat center top;
  background-size: 128rpx;
  color:#DBDBDB; 
  font-size: 30rpx;
}
.photo .img{
  float: left;
  margin-right:13rpx;
  margin-bottom:13rpx;
}
.photo image{
  float: left;
  width: 220rpx;
  height: 220rpx;
  display: block;
}
.fb{
  width: 80rpx;
  height: 80rpx;
  color: #f60;
  float: right;
  margin: 25rpx 0;
  font-size: 34rpx;
}
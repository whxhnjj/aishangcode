page{
  background: #fff;
}
/* 搜索 */
.search{
  position: relative;
  margin: 60rpx auto 30rpx;
  width: 700rpx;
  height: 60rpx;
}
.search input{
  float: left;
  width: 480rpx;
  height: 60rpx;
  margin-right: 25rpx;
  padding: 0 30rpx 0 60rpx;
  border: 1rpx solid #dadada;
  border-radius: 30rpx;
  line-height: 58rpx;
}
.search_btn{
  float: left;
  width: 100rpx;
  height: 60rpx;
  background: #e4393c;
  color: #fff;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0;
  font-size: 28rpx;
}
.search image{
  position: absolute;
  top: 17rpx;
  left: 20rpx;
  z-index: 10;
  width: 26rpx;
  height: 26rpx;
}

/*banner*/
.shop_banner{
  width: 700rpx;
  height: 350rpx;
  margin: 0 auto 50rpx;
  border-radius: 15rpx;
  overflow: hidden;
}
.shop_banner image{
  width: 100%;
  height: 350rpx; 
}


/* 分類 */
.navbar_box{
  width: 100%;
  background: #fff;
}
.navbar{
  display: flex;
  white-space: nowrap; 
  width: 700rpx;
  margin: 0 auto;
}
.item{
  display: inline-block;
  margin-right: 80rpx;
}
.navbar .item:last-child{
  margin-right: 0;
}
.item_box{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item_box view{
  margin-bottom: 20rpx;
  font-size: 32rpx;
}
.item_box text{
  width: 50rpx;
  height: 6rpx;
  background: #fff;
}

.navbar .selected view{
  color: #e4393c;
  font-weight: 600;
}
.navbar .selected text{
  background: #e4393c;
}

/* 列表 */
.category_box{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 700rpx;
  margin: 30rpx auto 0;
}
.category_box .category_list{
  width: 335rpx;
  margin-bottom: 60rpx;
}
.category_box .category_list image{
  width: 335rpx;
  height: 335rpx;
  border-radius: 15rpx;
}
.category_box .category_list .title{
  display:block;
  height:80rpx;
  margin: 25rpx 0 30rpx;
  font-size:30rpx;
  word-break:break-all;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
}
.category_box .category_list .price{
  font-size: 40rpx;
  font-weight: 800;
  color: #e4393c;
}
.category_box .category_list .price text:first-child{
  font-size: 28rpx;
}
.page_text{
  display:block;
  padding-bottom: 50rpx;
  margin: 0 auto;
  text-align:center;
  color:#999;
}
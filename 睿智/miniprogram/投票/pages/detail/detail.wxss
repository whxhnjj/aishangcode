.showtost{
  width:100%;
  height:100%;
  background: #000;
  position: fixed;
  opacity: 0.5;
  z-index: 99999;
}
.box_most{
  width: 600rpx;
  height:830rpx;
  margin:90rpx 50rpx;
  padding: 25rpx;
  z-index:999999;
  position: fixed;
  background: linear-gradient(#db4d41,#dd5847,#e6644e,#eb6e4e, #f47c59);
  border-radius: 35rpx;
}
.box_most .box_span{
    color: #ffe5b1;

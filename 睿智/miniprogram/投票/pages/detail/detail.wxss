.tabs{
    width: 720rpx;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    right: 0;
    padding: 0 15rpx;
    border-top: 1rpx solid #AAA;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    background: #F7F7FA;
    z-index: 9999999999;
}
.tabs view{
  width: 240rpx;
  height: 100rpx;
  text-align: center;
  line-height: 150rpx;
  font-size:26rpx;
  color: #888;
}
.tabs view.tabs_left{
  background: url(http://www.hsbggb.com/wangjie/tabs_left.png) no-repeat center 10rpx;
  background-size:46rpx;
}
.tabs view.tabs_center{
   position: relative;
   width: 150rpx;
   height:150rpx;
   top: -60rpx;
   left:0;
   border-radius: 50%;
   color: #FFF;
   line-height:225rpx;
  background:#11D4C6 url(http://www.hsbggb.com/wangjie/tabs_center.png) no-repeat center 10rpx;
  background-size:81rpx;
}
.tabs view.tabs_right{
  background: url(http://www.hsbggb.com/wangjie/tabs_right.png) no-repeat center 10rpx;
  background-size:46rpx;
}


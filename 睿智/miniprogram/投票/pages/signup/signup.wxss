/*照相*/
.photo{
  width: 700rpx;
  height:100%;
  padding: 25rpx;
  overflow: hidden;
}
.photo .tap{
  position: relative;
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin:25rpx 0;
  border: 3rpx dashed #DBDBDB;
  text-align: center;
  line-height: 325rpx;
  background: url(http://www.hsbggb.com/wangjie/phone.png) no-repeat center 15rpx;
  background-size:128rpx;
  color:#DBDBDB; 
  font-size: 30rpx;
}
.photo .img{
    display: flex;
    flex-wrap: wrap;
    justify-content:flex-start;
}
.photo image{
  float: left;
  margin-right:13rpx;
  margin-bottom:13rpx;
  width: 220rpx;
  height: 220rpx;
  display: block;
}

.box{
  width: 700rpx;
  height: 100%;
  overflow: hidden;
  padding: 0 25rpx;
}
.box .list{
  width: 700rpx;
  height: 100%;
  overflow: hidden;
  border: 1rpx solid #DBDBDB;
  border-radius: 12rpx;
  margin-bottom: 25rpx;
}
.box .list span{
  width: 100rpx;
  height:100rpx;
  overflow: hidden;
  float: left;
  display: block;
}
.box .list input{
  width:600rpx;
  height:100rpx;
  overflow: hidden;
  float: right;
  font-size:34rpx;
}
.box .list span.name{
  background: url(http://www.hsbggb.com/wangjie/name.png) no-repeat center center;
  background-size: 48rpx;
}
.box .list span.number{
  background: url(http://www.hsbggb.com/wangjie/number.png) no-repeat center center;
    background-size: 48rpx;
}
button{
  width: 700rpx;
  height:100rpx;
  margin: 50rpx 0;
  color: #FFF;
  line-height:100rpx;
  background-color:#11D4C6;
}
textarea{
  width: 700rpx;
  height:200rpx;
  padding: 10rpx;
}
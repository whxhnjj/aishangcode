
<view class='photo'>
    <view class="img">
    <block wx:for="{{imageList}}" wx:for-item="image">
      <image  src="{{image}}" data-src="{{image}}" bindtap="previewImage">
      </image>
    </block>
   </view>
  <view class="tap" bindtap="chooseImage">添加照片</view> 
</view>

<view class="box">
  <form>
    <view class="list">
      <span class="name"></span>
      <input type="text" placeholder="请输入姓名" placeholder-style="font-size:34rpx;"></input>
    </view>
    <view class="list">
      <span class="number"></span>
      <input type="number" placeholder="请输入手机号" placeholder-style="font-size:34rpx; color: #858585;" ></input>
    </view>
    <view class="list">
    <textarea placeholder="请输入一段你想介绍自己的文字" placeholder-style="font-size:34rpx; color: #858585;" >
    </textarea>
    </view>
    <button form-type="submit">提交</button>
    </form>
</view>


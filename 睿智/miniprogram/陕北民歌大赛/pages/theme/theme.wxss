.banner {
  width: 100%;
  height: 375rpx;
  overflow: hidden;
}
.banner image {
  width: 100%;
  height: 100%;
}
.box1{
  width: 700rpx;
  margin: 25rpx;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.box1 view{
  width: 200rpx;
  height:100rpx;
  border-right:1rpx solid #999;
  padding: 15rpx;
  text-align: left;
}
.box1 view.box1_right{
  border-right:0rpx; 
}
.box1 view b{
  width:70rpx;
  height: 100rpx;
  display: block;
  float: left;
}
.box1 view.box1_left b{
  background: url(https://huahuohe.com/static/xcx/theme_left.png) no-repeat center center;
  background-size:50rpx;
}
.box1 view.box1_center b{
  background: url(https://huahuohe.com/static/xcx/theme_center.png) no-repeat center center;
  background-size:50rpx;
}
.box1 view.box1_right b{
  background: url(https://huahuohe.com/static/xcx/theme_right.png) no-repeat center center;
  background-size:50rpx;
}
.box1 view .sp_tp{
  width:130rpx;
  height:50rpx;
  display: block;
  float: left;
  line-height:60rpx;
  font-size:28rpx;
  color: #353535;
}
.box1 view .sp_bt{
  width:130rpx;
  height:50rpx;
  display: block;
  float: left;
  font-size:30rpx;
  font-weight:500;
  color: #888888;
}
.box2{
  width:700rpx;
  height:100rpx;
  padding:30rpx 25rpx;
  background:#FA7164;
  color: #FFF;
  text-align: center;
  }
.boxelse{
  width:700rpx;
  height:100rpx;
  padding:30rpx 25rpx;
  background:#FA7164;
  color: #FFF;
  line-height: 100rpx;
  text-align: center;
}
.box2 .left{
  width:400rpx;
  height: 100rpx;
  float: left;
  text-align: left;
  overflow: hidden;
}
.box2 .left span{
  display: block;
  float: left;
  width:400rpx;
  height:50rpx;
  line-height: 50rpx;
}
.box2 .left span.time{
  font-size:48rpx;
}
.box2 .left span.time i{
  font-size:22rpx;
}
.box2 .right{
  width: 200rpx;
  height:70rpx;
  background: #FDE979;
  color: #FA7164;
  float: right;
  font-size: 30rpx;
  line-height:70rpx;
  text-align: center;
  margin: 15rpx 0;
  border-radius: 15rpx;
  font-weight: 600;
}
.box3{
  width: 698rpx;
  height:84rpx;
  overflow: hidden;
  margin:25rpx;
  border: 1px solid #888888;
  border-radius: 13rpx;
}
.box3 .keyword{
  width:528rpx;
  height: 82rpx;
  float: left;
  display: block;
  padding-left: 25rpx;
}
.box3 .search{
  width:100rpx;
  height:82rpx;
  float: right;
  border: none;
  background:url(https://huahuohe.com/static/xcx/sousuo.png) no-repeat center center;
  background-size:48rpx;
}
.box3 button::after{
  border: none;
}
.box4{
    width: 700rpx;
    height: 100%;
    overflow: hidden;
    margin: 25rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.box4 .box_view{
  width: 340rpx;
  height:340rpx;
  overflow: hidden;
  margin-bottom:50rpx; 
  position: relative;
}
.box4 .box_view image{
  width: 340rpx;
  height:340rpx;
}
.box4 .box_view span.intit{
 position: absolute;
  top: 0;
  left: 0;
  padding:0 10rpx;
  height: 50rpx;
  display: block;
  background:#11D4C6;
  line-height: 50rpx;
  text-align: center;
  color: #FFF;
  font-size: 30rpx;
}
.box4 .box_view span.name{
  position: absolute;
  bottom: 0;
  left: 0;
  width:320rpx;
  height:40rpx;
  display: block;
  color: #FFF;
  font-size: 28rpx;
  padding:10rpx;
  z-index: 100;
  text-align: left;
  line-height:40rpx;
  background: url(https://huahuohe.com/static/xcx/box4_toupiao.png) no-repeat 280rpx center; 
  background-size: 38rpx;
}
.box4 .box_view span.font{
  position: absolute;
  bottom: 0;
  left: 0;
  width:340rpx;
  height:60rpx;
  display: block;
  background: #000;
  opacity:0.6;
}
.footer{
  text-align: center;
  width: 750rpx;
  height:60rpx;
  line-height:60rpx;
  overflow: hidden;
  padding-bottom: 50rpx;
  color: #999999;
  font-size: 30rpx;
}
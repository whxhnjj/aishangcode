page{
  padding-bottom: 170rpx;
}


/*地址*/
.buy_address{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 50rpx;
  background: #fff;
}

.buy_address .left_box{
  display: flex;
  align-items: center;
}
.address_image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.address_add{
  width: 40rpx;
  height: 30rpx;
}

.address_on{
  width: 40rpx;
  height: 40rpx;
  margin-right: 25rpx;
}
.address_msg{
  width: 580rpx;
}
.address_msg .address_msg_box1{
  margin-bottom: 15rpx;
  font-size: 30rpx;
  color: #000;
}
.address_msg .address{
  font-size: 24rpx;
  line-height: 1.5;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;  
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.address_msg .address text{
  display: inline-block;
  padding: 5rpx 20rpx;
  margin-right: 10rpx;
  background: #ff0000;
  color: #fff;
  font-size: 24rpx;
}

.address_line{
  width: 1rpx;
  height: 60rpx;
  margin: 0 30rpx;
  background: #dadada;
}

.address_edit{
  width: 45rpx;
  height: 45rpx;
}

/* header */
.header{
  display: flex;
  width: 100%;
  padding: 60rpx 30rpx 50rpx;
  background: #fff;
}

.header image{
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.goods_des{
  width: 430rpx;
}
.goods_des>text:nth-of-type(1){
  display: block;
  margin-bottom: 10rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods_des>text:nth-of-type(2){
  display: block;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #808080;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods_des .goods_import text{
  font-size: 26rpx;
  color: #ccc;
}
.goods_des .goods_import text:after{
  content: '|';
  padding: 0 8rpx;
  color: #e6e6e6;
}
.goods_import>text:last-child:after{
  content: '';
  padding: 0;
}


.goods_msg{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100rpx;
  text-align: right;
  color: #999;
  font-size: 30rpx;
}
.goods_msg>view>text:first-child{
  padding-right: 4rpx;
  font-size: 24rpx;
}

/* 列表 */
.content_box{
  margin-top: 50rpx;
  font-size: 30rpx;
}
.content_list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 50rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e6e6e6;
}
.content_box .content_list:last-child{
  border-bottom: none;
}

.content_list>text{
  width: 150rpx;
}
.right_box{
  text-align: right;
}


.num_box{
  display: flex;
}
.num_box text{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-color: #e6e6e6;
  border-style: solid;
  font-size: 36rpx;
}
.num_box text:first-child{
  border-width: 1rpx 0 1rpx 1rpx;
}
.num_box text:nth-of-type(2){
  width: 60rpx;
  border-width: 1rpx;
  font-size: 30rpx;
}
.num_box text:last-child{
  border-width: 1rpx 1rpx 1rpx 0;
}

.picker{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.picker input{
  text-align: right;
}
.picker image{
  width: 16rpx;
  height: 27rpx;
  margin-left: 10rpx;
  vertical-align: -3%;
}

/* 底部 */
.bottom .left_box{
  align-items: baseline;
  padding: 15rpx 0 0 30rpx;
}
.bottom .left_box text:nth-of-type(2){
  padding: 15rpx;
}
.bottom .left_box text:last-child{
  font-size: 48rpx;
}

/*弹出层*/
.pop_bg{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
}
.pop_box{
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 110;
  width: 100%;
  padding: 0 30rpx 0;
  background: #f8f8f8;
}

@keyframes slidedown {
    from {
        transform: translateY(0);
    }
    to {
        transform: translateY(100%);
    }
}
@keyframes slideup {
    from {
        transform: translateY(100%);
    }
    to {
        transform: translateY(0);
    }
}
.slidedown {
    animation: slidedown 0.5s linear ;
}
.slideup {
    animation: slideup 0.5s linear ;
}


.pop_row{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0;
  border-top: 1rpx solid #ff5070;
}
.pop_box .pop_row:first-child{
  border-top: none;
}
.pop_row .left_box{
  font-size: 30rpx;
}
.pop_row .left_box text:last-child{
  display: block;
  font-size: 26rpx;
  color: #999;
}
.pop_row .left_box text:first-child {
  display: block;
  margin-bottom: 5rpx;
  color: #333;
}
.selected .left_box text:first-child{
  color: #ff5070;
}

.pop_box .btn{
  width: 100%;
  height: 120rpx;
  margin-top: 30rpx;
  border-top: 1rpx solid #e6e6e6;
  text-align: center;
  line-height: 120rpx;
  font-size: 34rpx;
  color: #ff5070;
}
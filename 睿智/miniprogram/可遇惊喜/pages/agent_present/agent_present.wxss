/******银行列表选项******/
.bank_bg{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 300;
  width: 100%;
  min-height: 100%;
  background-color: #fff;
}
.bank_bg>text{
  display: block;
  padding: 50rpx 0 30rpx 30rpx;
  font-size: 26rpx;
  color: #999;
  background-color: #f5f5f5;
}
.bank_box .bank_list{
  display: flex;
  align-items: center;
  margin: 0 30rpx;
  padding: 30rpx 0;
  border-top: 1rpx solid #e6e6e6;
  font-size: 30rpx;
}
.bank_box .bank_list:first-child{

.shop_top{
  position: relative;
  width: 100%;
  height: 400rpx;
  background: #ff6600 url(https://shop.webimage.cn/static/images/shop_bg.jpg) no-repeat center center;
  background-size: 750rpx auto
}
.shop_logo{
 position: absolute;
 left: 25rpx;
 bottom: 50rpx;
 z-index: 100;
 height:100rpx;
 width:100rpx;
 border-radius: 50%;
}
.shop_top text{
 position: absolute;
 left: 145rpx;
 bottom: 65rpx;
 z-index: 100;
 font-size: 36rpx;
 color: #fff;
}

.shop_kuang{
  background: #fff;
  margin-bottom: 20rpx;
  border-top: 1rpx solid #dadada;
}
.shop_header{
  height: 100rpx;
  padding:0 40rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
 
}

.shop_content{
  border-top: 1rpx solid #dadada;
  margin-left: 40rpx;
  padding:30rpx 40rpx 30rpx 0;
  text-align: justify;
}
.shop_content text{
  line-height: 1.8;
  color: #686868;
}

.shop_lists{
  padding: 10rpx 40rpx 30rpx 40rpx;
}
.shop_list{
  margin-bottom: 35rpx;
  line-height: 30rpx;
  color: #686868;
}
.shop_list image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
  vertical-align: -23%;
}
.shop_list text{
  margin-top: -1rpx;
  width: 485rpx;
  line-height: 1.3;
}

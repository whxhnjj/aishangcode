
page {
  box-sizing: border-box;
  background: #fff;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  font-family: PingFangSC-Regular, sans-serif, "微软雅黑";
}

.container {
  position: relative;
  width: 690rpx;
  margin: 0 auto;
}

.clearfix {
  display: table;
  content: '';
  clear: both;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

view, images, text, navigator,textarea {
  box-sizing: border-box;
}

button::after {
  border: none;
}
.hide{
  display: none!important;
}


/* 兼容iponex */
.iphone_kuang{
  display: block;
  width: 100%;
  height: 68rpx;
}
.iphone {
  bottom: 68rpx !important;
}
.iphone_bottom{
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 100;
  width: 100%;
  height: 68rpx;
  background: #fff;
}


/* 没有内容 */
.no_content{
  display: block;
  margin-top: 400rpx;
  text-align: center;
}
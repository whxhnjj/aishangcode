/* 分類 */
.navbar_box{
  width: 100%;
  padding-top: 20rpx;
  background: #fff;
}
.navbar{
  display: flex;
  white-space: nowrap; 
  width: 700rpx;
  margin: 0 auto;
}
.item{
  display: inline-block;
  margin-right: 80rpx;
}
.navbar .item:last-child{
  margin-right: 0;
}
.item_box{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item_box view{
  margin-bottom: 20rpx;
  font-size: 32rpx;
}
.item_box text{
  width: 50rpx;
  height: 6rpx;
  background: #fff;
}

.navbar .selected view{
  color: #e4393c;
  font-weight: 600;
}
.navbar .selected text{
  background: #e4393c;
}
/*订单列表  */
.order_kuang{
  min-height:980rpx;
}
.order_list{
  margin-top: 20rpx;
}

.order_list_header{
  padding: 30rpx 25rpx 20rpx;
  background: #fff;
}
.order_list_fl{
  margin-bottom: 10rpx;
}
.order_list_fl text:first-child{
  display: block;
  color: #000;
  font-size: 30rpx;
}
.order_list_fr{
  color: #e31122;
}
.order_bh{
  display: block;
  margin-right: 20rpx;
  color: #9c9c9c;
  font-size: 24rpx;
  line-height: 48rpx;
}
.order_clone{
  width: 85rpx;
  height: 45rpx;
  margin: 0;
  padding: 2rpx 5rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  background: #fff;
  border-radius: 2rpx;
  border: 1rpx solid #dadada;
}
/*商品*/
.pro_list{
  padding: 12rpx 25rpx;
  background: #fafafa;
}
.pro_list image{
  width: 160rpx;
  height: 160rpx;
  margin-right: 15rpx;
}
.pro_list_box1{
  width: 330rpx;
}
.pro_list_box1 .pro_title{
  margin-bottom: 15rpx;
  height: 70rpx;
  line-height: 35rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
.pro_list_box1 .pro_sku{
  color:#5d5d5d;
}
.pro_list_box2{
  text-align: right;
}
.pro_list_box2 .pro_price{
  display: block;
  line-height: 1.5;
  margin-bottom: 57rpx;
  color: #000;
}
.pro_list_box2 .pro_count{
  color:#5d5d5d;
}

.order_price{
  height: 90rpx;
  width: 100%;
  padding-left: 25rpx;
  background: #fff;
  line-height: 90rpx;
  text-align: right;
  font-size: 30rpx;
}
.order_price text{
  display: block;
  width: 100%;
  height: 90rpx;
  padding-right: 25rpx;
  border-bottom: 1rpx solid #dadada;
}
.order_price text:before{
  content: "合计：";
  color: #e31122;
}

.order_chose{
  width: 100%;
  padding: 25rpx;
  background: #fff;
}
.order_chose button{
  float: right;
  width: 200rpx;
  height: 70rpx;
  background: #fff;
  border: 1rpx solid #dadada;
  font-size: 28rpx;
}
.order_chose button:not(:first-child){
  margin-right: 20rpx
}
.order_chose button.selected{
  color: #e31122;
  border-color: #e31122;
}